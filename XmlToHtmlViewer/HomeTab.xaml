<UserControl x:Class="XmlToHtmlViewer.HomeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" Padding="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Text="XML 报告查看器" 
                   FontSize="28" FontWeight="Bold" Foreground="#2c3e50"
                   HorizontalAlignment="Left" Margin="0,0,0,20"/>

        <!-- 欢迎内容 -->
        <StackPanel Grid.Row="1" Margin="0">
            <TextBlock Text="欢迎使用 XML 报告查看器！" 
                       FontSize="20" FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>

            <TextBlock Margin="0,0,0,10">
                <Run Text="本工具支持：" />
                <LineBreak/>
                <Run Text="✔ 自动解析 XML + XSL 转为 HTML" />
                <LineBreak/>
                <Run Text="✔ 拖拽或双击打开 .xml 文件" />
                <LineBreak/>
                <Run Text="✔ 复制表格并粘贴到 Excel（保留格式）" />
            </TextBlock>

            <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                    Padding="15" CornerRadius="6" Margin="0,0,0,15">
                <TextBlock Text="💡 提示：将 XML 文件拖拽到窗口中即可快速打开" 
                           Foreground="#007bff" FontWeight="SemiBold"/>
            </Border>

            <!-- 示例图 -->
            <Viewbox Height="150" HorizontalAlignment="Left" Margin="0,0,0,15">
                <Canvas Width="300" Height="80">
                    <Rectangle Canvas.Left="10" Canvas.Top="10" 
                               Width="280" Height="60" 
                               Fill="#e9ecef" Stroke="#adb5bd" 
                               RadiusX="6" RadiusY="6"/>
                    <TextBlock Canvas.Left="30" Canvas.Top="25" 
                               Text="your_report.xml" 
                               FontSize="16" Foreground="#495057"/>
                    <TextBlock Canvas.Left="230" Canvas.Top="25" 
                               Text="×" FontSize="16" Foreground="Red"/>
                </Canvas>
            </Viewbox>

            <!-- 开始按钮 -->
            <Button x:Name="StartButton" 
                    Content="立即开始 →" 
                    Background="#007bff" Foreground="White" 
                    FontSize="16" FontWeight="Bold" 
                    Padding="20,10"
                    Width="150" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- 版本信息 -->
        <TextBlock Grid.Row="2" Text="v1.0.0 - 支持 CefSharp 渲染 HTML" 
                   Foreground="Gray" FontSize="12" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>