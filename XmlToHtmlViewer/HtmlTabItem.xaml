<UserControl x:Class="XmlToHtmlViewer.HtmlTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
            <TextBlock x:Name="FileNameText" FontWeight="Bold" VerticalAlignment="Center"/>
            <Separator Margin="10,0" Width="2"/>
            <Button Content="🔄 刷新" Click="Refresh_Click" Margin="2,0"/>
        </StackPanel>

        <cef:ChromiumWebBrowser x:Name="Browser" Grid.Row="1" />
    </Grid>
</UserControl>