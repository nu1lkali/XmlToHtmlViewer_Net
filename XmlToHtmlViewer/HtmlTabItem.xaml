<UserControl x:Class="XmlToHtmlViewer.HtmlTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             AllowDrop="True" Drop="UserControl_Drop" DragOver="UserControl_DragOver">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
            <TextBlock x:Name="FileNameText" FontWeight="Bold" VerticalAlignment="Center"/>
            <Separator Margin="10,0" Width="2"/>
            <Button Content="🔄 刷新" Click="Refresh_Click" Margin="2,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <WebBrowser x:Name="Browser" AllowDrop="False" />
            <!-- 透明覆盖层用于捕获拖拽事件 -->
            <Grid Background="Transparent" AllowDrop="True" Drop="Grid_Drop" DragOver="Grid_DragOver" />
        </Grid>
    </Grid>
</UserControl>